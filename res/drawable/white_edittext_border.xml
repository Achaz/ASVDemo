<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item >
        <shape >
            <corners android:radius="5dp"/>
           <solid android:color="@color/et_red"/>
           
	        <size android:width="250dp"
	              android:height="5dp"/> 
	       
	        <padding android:bottom="2dp"
	                 android:left="2dp"
	                 android:top="0dp"
	                 android:right="0dp"/>
        </shape>
    </item>
    
    <item>
	    <shape>
	        <gradient
				android:startColor="@color/et_white"
				android:centerColor="@color/et_white"
				android:endColor="@color/et_white"
				android:angle="270"/>
	        <padding android:left="2dp"
	            android:top="2dp"
	            android:right="2dp"
	            android:bottom="2dp"/>
	    </shape>
    </item>
</layer-list>
