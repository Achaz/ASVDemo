<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
   <item >
        <shape 
            android:innerRadius="2dp">
            <corners android:radius="8dp"/>
           <solid android:color="@color/et_red"/>
           
	        <size android:width="250dp"
	              android:height="5dp"/> 
	        <padding android:bottom="1dp"
	                 android:left="1dp"
	                 android:top="1dp"
	                 android:right="1dp"/>
        </shape>
    </item>
    
   <item >
        <shape 
            android:innerRadius="2dp">
           <corners android:radius="8dp"/>
           <solid android:color="@color/et_white"/>
           
	        <size android:width="250dp"
	              android:height="5dp"/> 
	        <padding android:bottom="3dp"
	                 android:left="3dp"
	                 android:top="3dp"
	                 android:right="3dp"/>
        </shape>
    </item>
    
    <item>
	    <shape
	        android:innerRadius="2dp">
	        <corners android:radius="8dp"/>
	        <gradient
				android:startColor="@color/et_red"
				android:centerColor="@color/et_red"
				android:endColor="@color/et_red"
				android:angle="270"/>
	    </shape>
    </item>
</layer-list>
